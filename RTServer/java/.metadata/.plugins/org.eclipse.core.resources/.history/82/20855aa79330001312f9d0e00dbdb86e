package com.bsh.rtclient.util;

public class Api {

	public static String login(final String name, final String password) {
		Service.getConnection();
		return Service.sendData("{\"action\":\"login\",\"name\":\"" + name + "\",\"password\":\"" + password + "\"}");
	}
	
	public static void logout() {
		Service.closeConnection();
	}
	
}
